# Remote Emulator Server Configuration
# Copy this file to .env and update the values for your deployment

# Server Configuration
HTTP_PORT=3002
HTTPS_PORT=3443
HOST=0.0.0.0

# SSL Configuration (Optional - for HTTPS/WSS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Security Configuration
ALLOWED_ORIGINS=https://hemangpandhi.com,https://www.hemangpandhi.com,http://localhost:3000
EMULATOR_API_KEY=your-secure-api-key-here

# Android SDK Configuration
ANDROID_HOME=/Users/hemang/Library/Android/sdk
ANDROID_SDK_ROOT=/Users/hemang/Library/Android/sdk

# Performance Configuration
TARGET_FPS=20
MAX_WIDTH=1080
MAX_HEIGHT=1920
QUALITY=0.8

# Network Configuration (if behind firewall/NAT)
PUBLIC_IP=your-server-public-ip
PUBLIC_PORT=3002
